{
  "name": "traffic-light-controller",
  "version": "0.0.1",
  "scripts": {
    "doc": "jsdoc src -r -d doc",
    "peg": "pegjs -o src/command-peg-parser.js src/command-grammar.pegjs",
    "test": "npm run peg && mocha --require coffeescript/register \"test/**/*.coffee\"",
    "web": "npm run peg && browserify web/main.js -o web/bundle.js && opn web/index.html",
    "cli": "npm run peg && node cli/main.js",
    "cli-browser": "npm run peg && node cli/main.js Chromium"
  },
  "devDependencies": {
    "browserify": "^16.1.0",
    "chai": "^4.1.2",
    "coffeescript": "^2.2.1",
    "jsdoc": "^3.5.5",
    "mocha": "^5.0.1",
    "opn-cli": "^3.1.0",
    "pegjs": "^0.10.0",
    "puppeteer": "^1.1.0",
    "sinon": "^4.3.0"
  },
  "dependencies": {
    "node-hid": "^0.7.2",
    "usb-detection": "^2.1.0"
  }
}

{
  "name": "hello-lights",
  "version": "0.0.2",
  "description": "Commands to control a traffic light",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jordao76/hello-lights.git"
  },
  "author": "Rodrigo Jordao <rodrigo.jordao@gmail.com> (https://github.com/jordao76)",
  "license": "MIT",
  "scripts": {
    "doc": "jsdoc src -r -d doc && opn doc/index.html",
    "lint": "eslint src web cli",
    "peg": "pegjs -o src/command-peg-parser.js src/command-grammar.pegjs",
    "pretest": "npm run peg",
    "test": "mocha --require coffeescript/register \"test/**/*.coffee\"",
    "mocha": "mocha --require coffeescript/register \"test/**/*.coffee\"",
    "precoverage": "nyc npm run test",
    "coverage": "nyc report --reporter=html && opn coverage/index.html",
    "preweb": "npm run peg",
    "web": "browserify web/main.js -o web/bundle.js && opn web/index.html",
    "precli": "npm run peg",
    "cli": "node cli/main.js",
    "precli-browser": "npm run peg",
    "cli-browser": "node cli/main.js ./chromium",
    "prepublishOnly": "npm run peg && cpy **/*.* !*.pegjs ../lib/ --cwd=src --parents"
  },
  "devDependencies": {
    "browserify": "^16.2.2",
    "chai": "^4.1.2",
    "coffeescript": "^2.3.1",
    "cpy-cli": "^2.0.0",
    "eslint": "^5.2.0",
    "jsdoc": "^3.5.5",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "opn-cli": "^3.1.0",
    "pegjs": "^0.10.0",
    "puppeteer": "^1.6.1",
    "sinon": "^6.1.4"
  },
  "dependencies": {
    "node-hid": "^0.7.3",
    "usb-detection": "^3.2.0"
  },
  "nyc": {
    "exclude": [
      "src/command-peg-parser.js"
    ]
  }
}
